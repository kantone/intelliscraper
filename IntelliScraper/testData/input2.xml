<?xml version="1.0" encoding="utf-8"?>
<intelliScraper>
  <settings>
    <showInitialMessage>true</showInitialMessage>
    <initialMessage>IntelliScraping Demo : hPost</initialMessage>
    <logIscraperInfo>true</logIscraperInfo>


    <useProxy>true</useProxy>
    <proxyFile>F:\sp2can\P\_me\prjects-publics\IntelliScraper\proxies.txt</proxyFile>

    <userAgent>Mozilla/4.0 (compatible; MSIE 6.0; Windows NT 5.2; .NET CLR 1.0.3705;)</userAgent>
    <useCustomUserAgentFileList>false</useCustomUserAgentFileList>
    <customUserAgentFile></customUserAgentFile>

    <globalHttpHeader>
      <name></name>
      <value></value>
