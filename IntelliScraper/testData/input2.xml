    <waitAfterError>1</waitAfterError>
    <onError>
      <action>none</action>
      <repeatTimes>0</repeatTimes>
    </onError>
    <imageFolderDownload></imageFolderDownload>
  </settings>
  <storeInfo>
    <name>Store1</name>
    <type>csv</type>
    <connection></connection>
    <csvHeader>Title</csvHeader>
    <csvFileSaveTo>c:\test.csv</csvFileSaveTo>
    <csvFileClear>false</csvFileClear>
    <csvSeparator>|</csvSeparator>
  </storeInfo>


  <!--Process Li collection-->
  <Action>
    <Rule>
      <id>idFindPage</id>
      <type>xpath</type>
      <inputRuleId>id2</inputRuleId>
      <xpath>
        <type>single</type>

        <xpathRule>
          <id>id3-0</id>
          <description>Get page</description>
          <inputRuleId>id2</inputRuleId>
