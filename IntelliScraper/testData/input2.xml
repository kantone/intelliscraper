        </xpathRule>

      </xpath>
    </Rule>
    <Save>
      <enableSave>true</enableSave>
      <inputType>xpathSingle</inputType>
      <saveType>fromXpathCollection</saveType>
      <mapping>
        <map>
          <mapColName>Title</mapColName>
          <refId>id1.id1-0</refId>
