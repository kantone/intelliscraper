        <type>single</type>

        <xpathRule>
          <id>id1-0</id>
          <inputRuleId>id1</inputRuleId>
          <xpath>/html/body/div[6]/div[3]/div[2]/div[7]/div[3]/div/div[3]/div/div[2]/h4/a</xpath>
